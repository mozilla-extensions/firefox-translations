{
  "name": "bergamot-browser-extension",
  "description": "bergamot-browser-extension",
  "version": "0.2.0",
  "author": "Mozilla",
  "dependencies": {
    "@ant-design/colors": "^4.0.5",
    "@popperjs/core": "^2.4.4",
    "@sentry/browser": "^5.15.5",
    "classnames": "^2.2.6",
    "date-fns": "^2.0.0-alpha.25",
    "flat": "^5.0.0",
    "idb": "^2.0.4",
    "mobx": "^6.0.3",
    "mobx-keystone": "^0.48.0",
    "mobx-react": "^7.0.4",
    "nanoid": "^3.1.16",
    "pako": "^1.0.11",
    "photon-colors": "^3.3.1",
    "photon-icons": "^4.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-popper": "^2.2.3",
    "react-router-dom": "^5.2.0",
    "react-transition-group": "^4.4.1",
    "react-virtualized": "^9.21.2",
    "remotedev": "^0.2.9",
    "typeface-inter": "^1.1.13",
    "webext-patterns": "^0.9.0",
    "webextension-polyfill-ts": "^0.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@sentry/webpack-plugin": "^1.11.1",
    "@types/chai": "^4.2.11",
    "@types/classnames": "^2.2.10",
    "@types/firefox-webext-browser": "^78.0.1",
    "@types/mocha": "^8.2.1",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.6",
    "@types/react-transition-group": "^4.4.0",
    "@types/selenium-webdriver": "^4.0.11",
    "abortcontroller-polyfill": "^1.4.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^5.1.4",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^6.0.2",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "doctoc": "^1.3.1",
    "dotenv-webpack": "^1.8.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.5.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-mozilla": "^0.13.0",
    "eslint-plugin-no-unsanitized": "^3.0.2",
    "eslint-plugin-typescript": "^0.12.0",
    "fixpack": "^2.3.1",
    "fx-runner": "^1.0.13",
    "geckodriver": "^1.22.1",
    "get-firefox": "^5.0.0",
    "husky": "^4.3.0",
    "jshint": "^2.9.5",
    "light-server": "^2.9.1",
    "lint-staged": "^10.5.1",
    "minimist": "^1.2.0",
    "mocha": "^5.2.0",
    "nock": "^13.0.1",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.4",
    "postcss-loader": "^4.0.3",
    "postcss-nested": "^5.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-scss": "^3.0.2",
    "prettier": "^1.11.0",
    "remotedev-server": "^0.3.1",
    "selenium-webdriver": "^4.0.0-beta.1",
    "source-map-loader": "^0.2.4",
    "source-map-support": "^0.5.19",
    "style-loader": "^1.1.3",
    "svg-url-loader": "^5.0.0",
    "tailwindcss": "^1.1.3",
    "trash-cli": "^1.4.0",
    "ts-loader": "^6.2.2",
    "ts-mocha": "^8.0.0",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.8.3",
    "typescript-json-schema": "^0.42.0",
    "web-ext": "^5.5.0",
    "webext-experiment-utils": "github:mozilla/webext-experiment-utils#v0.2.0",
    "webpack": "^4.1.0",
    "webpack-bundle-analyzer": "^4.1.0",
    "webpack-cli": "^3.1.1",
    "yamljs": "^0.3.0"
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">=1.21.1",
    "node": ">=10.18.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "keywords": [
    "bergamot",
    "mozilla",
    "neural-machine-translation",
    "translation"
  ],
  "license": "MPL-2.0",
  "lint-staged": {
    "*.{jsm,js,json}": [
      "prettier --trailing-comma=all --ignore-path=.eslintignore --write",
      "eslint --ext jsm,js,json",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --trailing-comma=all --ignore-path=.eslintignore --write",
      "tslint -t stylish",
      "git add"
    ],
    "*.{md}": [
      "prettier --trailing-comma=all --ignore-path=.eslintignore --write",
      "doctoc --title '**Contents**'",
      "git add"
    ],
    "*.{html}": [
      "prettier --trailing-comma=all --ignore-path=.eslintignore --write",
      "eslint --ext html",
      "git add"
    ],
    "*.{css,scss,json}": [
      "prettier --trailing-comma=all --ignore-path=.eslintignore --write",
      "git add"
    ]
  },
  "private": true,
  "scripts": {
    "bergamot-translator:build-and-import": "git submodule update --init --recursive && ../bergamot-translator/build-wasm.sh && ./import-bergamot-translator.sh ../bergamot-translator/build-wasm/wasm/",
    "bergamot-translator:download-and-import": "./download-bergamot-translator-wasm-artifacts.sh && ./import-bergamot-translator.sh ./downloaded-bergamot-translator-wasm-artifacts",
    "build": "npm-run-all bergamot-translator:download-and-import build:native-ui make-build-artifact-available-for-dep-signing",
    "build-and-test": "npm-run-all -n bergamot-translator:download-and-import build:default get-firefox:linux just-test",
    "build:chrome": "TARGET_BROWSER=chrome UI=extension-ui NODE_ENV=production webpack --mode=production && TARGET_BROWSER=chrome UI=extension-ui web-ext build",
    "build:default": "TARGET_BROWSER=firefox UI=extension-ui NODE_ENV=production webpack --mode=production && TARGET_BROWSER=firefox UI=extension-ui web-ext build",
    "build:native-ui": "TARGET_BROWSER=firefox UI=native-ui NODE_ENV=production webpack --mode=production && TARGET_BROWSER=firefox UI=native-ui web-ext build",
    "clean": "trash build/${TARGET_BROWSER}/${UI}/",
    "clean:test": "trash test/build",
    "development-build": "webpack && web-ext build",
    "format": "npm-run-all -s -n format:prettier format:docs format:eslint format:tslint format:fixpack",
    "format:docs": "doctoc --title '**Contents**' docs/*.md && prettier '**/*.md' --trailing-comma=all --ignore-path=.eslintignore --write",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:fixpack": "fixpack",
    "format:prettier": "prettier '**/*.{css,scss,js,ts,tsx,json,jsm,html}' --trailing-comma=all --ignore-path=.eslintignore --write",
    "format:tslint": "npm run lint:tslint -- --fix",
    "functional-tests": "concurrently --kill-others 'npm-run-all -n functional-tests:*' 'yarn serve-fixtures --port 4001' || true",
    "functional-tests:default": "TARGET_BROWSER=firefox UI=extension-ui FIREFOX_BINARY=${FIREFOX_BINARY:-nightly} EXTENSION_ARTIFACT=./dist/firefox/extension-ui/bergamot-browser-extension-$npm_package_version-firefox-extension-ui.xpi ts-mocha -p test/functional/tsconfig.json test/functional/tests/*.spec.ts --bail --full-trace",
    "functional-tests:native-ui": "TARGET_BROWSER=firefox UI=native-ui FIREFOX_BINARY=${FIREFOX_BINARY:-nightly} EXTENSION_ARTIFACT=./dist/firefox/native-ui/bergamot-browser-extension-$npm_package_version-firefox-native-ui.xpi ts-mocha -p test/functional/tsconfig.json test/functional/tests/*.spec.ts --bail --full-trace",
    "generate-manifest": "node generate-manifest.js",
    "generate-wee": "npm-run-all -s -n generate-wee:generateSchema:* generate-wee:verifyWeeSchema:* generate-wee:documentSchema:* generate-wee:generateStubApi:* format",
    "generate-wee:documentSchema:translateUi": "cd src/experiment-apis/translateUi && documentSchema schema.json > api.md",
    "generate-wee:generateSchema:translateUi": "cd src/experiment-apis/translateUi && yaml2json schema.yaml -p > schema.json",
    "generate-wee:generateStubApi:translateUi": "cd src/experiment-apis/translateUi && generateStubApi ./schema.json > stubApi.js",
    "generate-wee:verifyWeeSchema:translateUi": "cd src/experiment-apis/translateUi && verifyWeeSchema schema.json",
    "get-firefox:linux": "[ ! -d \"./firefox-nightly-linux\" ] && get-firefox --branch nightly --platform linux --extract && mv firefox firefox-nightly-linux || true",
    "init-dotenv-config": "./init-dotenv-config.sh",
    "just-test": "npm-run-all -n functional-tests",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint . --ext jsm,js,json",
    "lint:tslint": "tslint -t stylish ts/**/*.ts ts/**/*.tsx",
    "make-build-artifact-available-for-dep-signing": "cp dist/firefox/native-ui/bergamot-browser-extension-$npm_package_version-firefox-native-ui.xpi build/bergamot-browser-extension.xpi",
    "prebuild:chrome": "TARGET_BROWSER=chrome UI=extension-ui NODE_ENV=production npm-run-all init-dotenv-config clean generate-manifest",
    "prebuild:default": "TARGET_BROWSER=firefox UI=extension-ui NODE_ENV=production npm-run-all init-dotenv-config clean generate-manifest",
    "prebuild:native-ui": "TARGET_BROWSER=firefox UI=native-ui NODE_ENV=production npm-run-all init-dotenv-config clean generate-manifest",
    "predevelopment-build": "npm-run-all clean generate-manifest",
    "pretest:unit:mocha": "NODE_ENV=test npx webpack --entry ./test/unit/all-tests.ts --output-path test/unit/build --output-filename all-tests.js --target node",
    "serve-fixtures": "light-server -s test/fixtures/ -w \"test/fixtures/**\"",
    "watch": "TARGET_BROWSER=firefox UI=extension-ui REMOTE_DEV_SERVER_PORT=8181 npm-run-all development-build && TARGET_BROWSER=firefox UI=extension-ui REMOTE_DEV_SERVER_PORT=8181 concurrently 'webpack --watch' 'web-ext run' 'remotedev --port=8181' 'yarn serve-fixtures'",
    "watch:chrome": "TARGET_BROWSER=chrome UI=extension-ui REMOTE_DEV_SERVER_PORT=8182 npm-run-all development-build && TARGET_BROWSER=chrome UI=extension-ui REMOTE_DEV_SERVER_PORT=8182 concurrently 'webpack --watch' 'web-ext run -t chromium' 'remotedev --port=8182' 'yarn serve-fixtures'",
    "watch:native-ui": "TARGET_BROWSER=firefox UI=native-ui REMOTE_DEV_SERVER_PORT=8183 npm-run-all development-build && TARGET_BROWSER=firefox UI=native-ui REMOTE_DEV_SERVER_PORT=8183 concurrently 'webpack --watch' 'web-ext run' 'remotedev --port=8183' 'yarn serve-fixtures'",
    "web-ext-lint:chrome": "TARGET_BROWSER=chrome UI=extension-ui web-ext lint --ignore-files wasm/bergamot-translator-worker.data",
    "web-ext-lint:default": "TARGET_BROWSER=firefox UI=extension-ui web-ext lint --ignore-files wasm/bergamot-translator-worker.data",
    "web-ext-lint:native-ui": "TARGET_BROWSER=firefox UI=native-ui web-ext lint --ignore-files wasm/bergamot-translator-worker.data",
    "webpack:stats": "webpack --profile --json --mode=production > stats.json"
  }
}
